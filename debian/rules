#!/usr/bin/make -f

export PATH := $(HOME)/.cargo/bin:$(PATH)

%:
	dh $@ --with systemd

override_dh_auto_configure:
# ARMv6-hf (Raspberry Pi 1 & Zero)
ifeq ($(DEB_TARGET_ARCH), armel)
	curl https://static.rust-lang.org/rustup/dist/arm-unknown-linux-gnueabihf/rustup-init -o rustup-init
	chmod +x rustup-init
	./rustup-init -y --default-toolchain=nightly-2019-05-19
endif
# ARMv7-hf (Raspberry Pi 2)
ifeq ($(DEB_TARGET_ARCH), arm)
	curl https://static.rust-lang.org/rustup/dist/armv7-unknown-linux-gnueabihf/rustup-init -o rustup-init
	chmod +x rustup-init
	./rustup-init -y --default-toolchain=nightly-2019-05-19
endif
# ARMv8 (Raspberry Pi 3 & 4)
ifeq ($(DEB_TARGET_ARCH), arm64)
	curl https://static.rust-lang.org/rustup/dist/aarch64-unknown-linux-gnu/rustup-init -o rustup-init
	chmod +x rustup-init
	./rustup-init -y --default-toolchain=nightly-2019-05-19
	rustup toolchain install
endif
ifeq ($(DEB_TARGET_ARCH), i386)
	curl https://static.rust-lang.org/rustup/dist/i686-unknown-linux-gnu/rustup-init -o rustup-init
	chmod +x rustup-init
	./rustup-init -y --default-toolchain=nightly-2019-05-19
endif
ifeq ($(DEB_TARGET_ARCH), amd64)
	curl https://static.rust-lang.org/rustup/dist/x86_64-unknown-linux-gnu/rustup-init -o rustup-init
	chmod +x rustup-init
	./rustup-init -y --default-toolchain=nightly-2019-05-19
endif

override_dh_auto_build:
	cargo build --release --verbose

override_dh_auto_install:

override_dh_auto_test:

override_dh_clean:
	rm -rf target
	dh_clean
